<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="shp" extends="struts-default,json-default">

<!-- 		在eastLayers.jsp中被调用，更新属性 -->
		<action name="updateShpAttribute" class="web.shpEditAction"
			method="updateAttribute">
			<result type="json">
				<param name="root">updateFlag</param>
			</result>
		</action>
		
<!-- 		在China.js中被调用，更新位置 -->
		<action name="updateShpGeom" class="web.shpEditAction"
			method="updateGeom">
			<result type="json">
				<param name="root">updateFlag</param>
			</result>
		</action>
<!-- 		在China.js中被调用，添加点 -->
		<action name="addPoint" class="web.shpEditAction"
			method="addPoint">
			<result type="json">
				<param name="root">updateFlag</param>
			</result>
		</action>
<!-- 		在China.js中被调用，删除点 -->
		<action name="delPoint" class="web.shpEditAction"
			method="delPoint">
			<result type="json">
				<param name="root">updateFlag</param>
			</result>
		</action>
		
<!-- 		在China.js中被调用 ，获取属性-->
		<action name="getAttributesValue" class="web.shpEditAction"
			method="getAttributesValue">
			<result type="json">
				<param name="root">featureJson</param>
			</result>
		</action>

	</package>


</struts>    
